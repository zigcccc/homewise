{
  "name": "homewise",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrations:apply": "turbo run db:migrations:apply",
    "db:studio": "turbo run db:studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "**/src/**/*.{js,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --max-warnings=0 --no-ignore"
    ]
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=22"
  }
}