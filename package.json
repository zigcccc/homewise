{
  "name": "homewise",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:backend": "turbo run build --filter @homewise/backend-app --cwd ./apps/server",
    "build:web": "turbo run build --filter @homewise/web-app --cwd ./apps/web",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrations:apply": "turbo run db:migrations:apply",
    "db:studio": "turbo run db:studio"
  },
  "devDependencies": {
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "turbo": "^2.5.8",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=22"
  }
}