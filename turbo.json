{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "db:up": {
      "dependsOn": [
        "^db:up"
      ],
      "cache": false
    },
    "db:migrations:create": {
      "cache": false
    },
    "db:migrations:apply": {
      "cache": false
    },
    "db:studio": {
      "dependsOn": [
        "db:up"
      ],
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "HOMEWISE_DATABASE_URL",
        "HOMEWISE_RESEND_API_KEY",
        "VITE_API_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "NODEJS_HELPERS"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".vercel/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "dependsOn": [
        "db:up"
      ],
      "cache": false,
      "persistent": true
    }
  }
}