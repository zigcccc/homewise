{
  "name": "@homewise/server",
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "type": "./src/index.ts"
    },
    "./expenses": {
      "import": "./src/modules/expenses/models/index.ts",
      "type": "./src/modules/expenses/models/index.ts"
    }
  },
  "scripts": {
    "db:up": "docker compose up -d",
    "db:studio": "drizzle-kit studio",
    "db:migrations:create": "drizzle-kit generate",
    "db:migrations:apply": "drizzle-kit migrate",
    "dev": "tsx watch ./src/index.ts",
    "build": "tsc && tsc-alias -f",
    "lint": "eslint .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@homewise/emails": "workspace:*",
    "@hono/node-server": "catalog:",
    "@hono/zod-validator": "catalog:",
    "@neondatabase/serverless": "catalog:",
    "@react-email/components": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "resend": "catalog:"
  },
  "devDependencies": {
    "@homewise/eslint-config": "workspace:*",
    "@homewise/prettier-config": "workspace:*",
    "@homewise/typescript-config": "workspace:*",
    "@types/pg": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "pg": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "tsc-alias": "catalog:",
    "tsx": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "zod": "catalog:"
  },
  "prettier": "@homewise/prettier-config/default"
}