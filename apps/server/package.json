{
  "name": "@homewise/server",
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "type": "./src/index.ts"
    },
    "./households": {
      "import": "./src/modules/households/models/index.ts",
      "type": "./src/modules/households/models/index.ts"
    }
  },
  "scripts": {
    "db:up": "docker compose up -d",
    "db:studio": "drizzle-kit studio",
    "db:migrations:create": "drizzle-kit generate",
    "db:migrations:apply": "drizzle-kit migrate",
    "dev": "tsx watch ./src/index.ts",
    "build": "tsc && tsc-alias -f",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "emails:preview": "email dev --port 4000"
  },
  "dependencies": {
    "@hono/node-server": "catalog:",
    "@hono/zod-validator": "catalog:",
    "@neondatabase/serverless": "catalog:",
    "@react-email/components": "catalog:",
    "@react-email/tailwind": "catalog:",
    "better-auth": "catalog:",
    "class-variance-authority": "catalog:",
    "clsx": "catalog:",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "lucide-react": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "resend": "catalog:"
  },
  "devDependencies": {
    "@homewise/eslint-config": "workspace:*",
    "@homewise/prettier-config": "workspace:*",
    "@homewise/typescript-config": "workspace:*",
    "@react-email/preview-server": "catalog:",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "@types/react-dom": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "pg": "catalog:",
    "prettier-eslint": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "react-email": "catalog:",
    "tsc-alias": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "zod": "catalog:"
  },
  "prettier": "@homewise/prettier-config/default"
}